<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <%- include('./partials/head.ejs') %>
</head>
<body>
  <%- include('./partials/sidebar.ejs') %>
  <div class="donation-title">
    <div class="donation-row">
      <p>Item Name</p>
    <p>Quantity</p>
    <p class="description">Description</p>
    </div>
    
  </div>

  <div class="donation-con">
    <% donations.forEach(function(donation) { %>
      <div class="donation-row">
        <p><%= donation.itemName %></p>
        <p><%= donation.quantity %></p>
        <p class="description"><%= donation.description %></p>
        <form class="pet-delete-form" action="/admin/pets/donate-dashboard/<%= donation._id %>?_method=DELETE" method="post">
          <button class="btn-pet-delete" type="submit" value="delete">Delete</button>
        </form>
        <form class="pet-update-form" action="/admin/pets/donate-dashboard/<%= donation._id %>/update" method="get">
          <button class="btn-pet-update" type="submit" value="Update">Update</button>
        </form>
      </div>
      
    <% }); %>
    
  </div>
  
</body>
</html>